apiVersion: autoscaling/v2beta2
kind: HorizontalPodAutoscaler
metadata:
  name: crsagent-product-deployment-hpa
  namespace: crsagent-ota-service
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: crsagent-product-deployment
  minReplicas: 4
  maxReplicas: 12
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: 80
  behavior:
    scaleDown:
      policies:
      - type: Pods
        value: 1
        periodSeconds: 1800
      stabilizationWindowSeconds: 300